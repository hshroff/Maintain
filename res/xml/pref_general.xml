<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->

    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_step_display_options"
        android:entryValues="@array/pref_step_display_options"
        android:key="pref_step_display_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_step_display" />
    
    <EditTextPreference
        android:defaultValue=""
        android:key="pref_assignedTo"
        android:title="@string/pref_title_assignedTo"/>
    
    <EditTextPreference
        android:defaultValue="192.168.1.10:8080"
        android:key="pref_sync_url"
        android:title="@string/pref_sync_url"/>

</PreferenceScreen>